      <p>Select an amount or enter your donation:</p>
      <div class="amount-buttons">
        <button type="button" class="amount-btn" data-amount="50">৳ 50</button>
        <button type="button" class="amount-btn" data-amount="100">৳ 100</button>
        <button type="button" class="amount-btn" data-amount="500">৳ 200</button>
        <button type="button" class="amount-btn" data-amount="1000">৳ 500</button>
        <button type="button" class="amount-btn" data-amount="2000">৳ 1000</button>
        <button type="button" class="amount-btn" data-amount="5000">৳ 5000</button>
      </div>
      <div class="input-wrapper">
        <input type="number" id="donationAmount" placeholder="Enter amount" name="donation"  min="1" value="100">
        <span class="currency-label">BDT</span>
    </div>
      <button type="submit" id="donateButton">Donate</button>
</form>
  </div>
  <!-- Loading overlay -->
  <div class="loading-overlay">
      <div class="loader-1"></div>
  </div>
</div>
