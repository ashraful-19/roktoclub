    <main style="display: none;">
        <div class="search-filters">
            <h2 style="text-align: center; width: 100%; font-family: 'Hind Siliguri';">রক্ত খুঁজুন</h2>
            <select id="blood-group-search" name="blood-group" class="card">
                <option value="">Choice Blood</option>
                <option value="A+">A+</option>
                <option value="A-">A-</option>
                <option value="B+">B+</option>
                <option value="B-">B-</option>
                <option value="AB+">AB+</option>
                <option value="AB-">AB-</option>
                <option value="O+">O+</option>
                <option value="O-">O-</option>
            </select>

            <select id="division-search" name="division">
                <option value="">Choice Division</option>
                <!-- Options will be populated dynamically -->
            </select>

            <select id="district-search" name="district">
                <option value="">Choice District</option>
                <!-- Options will be populated dynamically based on selected division -->
            </select>
            <select id="upazila-search" name="upazila">
                <option value="">Choice City/Upazila</option>
                <!-- Options will be populated dynamically based on selected district -->
            </select>
        </div>

    </main>


<!-- Modal Structure -->
<div id="donor-modal" class="modal" style="display: none;">
  <div class="modal-content">
    <button class="close" style="display: none;">Skip </button>
    <h2 style="padding-right: 90px;"> <span style="color:red">রক্তদাতা</span> হতে চাইলে ফিলাপ করুন</h2>
      <form id="donor-form">
          <input type="text" id="name" name="name" placeholder="Ex: Md Ashraful Islam" required>
          <select id="blood-group" name="blood-group" required>
            <option value="">Choice Blood</option>
              <option value="A+">A+</option>
              <option value="A-">A-</option>
              <option value="B+">B+</option>
              <option value="B-">B-</option>
              <option value="AB+">AB+</option>
              <option value="AB-">AB-</option>
              <option value="O+">O+</option>
              <option value="O-">O-</option>
          </select>

          <select id="division" name="division" required>
              <option value="">Choice Division</option>
          </select>

          <select id="district" name="district" required>
              <option value="">Choice District</option>
          </select>

          <select id="upazila" name="upazila" required>
              <option value="">Choice City/Upazila</option>
          </select>

          <input type="tel" id="phone" name="phone" placeholder="Enter Phone number" required>

          <input type="text" id="fb-id" name="fb-id" placeholder="Facebook Id link (Optional)">
          
          <input type="text" id="age" name="age" placeholder="Your age" required>

          <label for="past-donation">আগে রক্ত দিয়েছিলেন:</label>
          <div class="past-donation-wrap">
              <label><input type="radio" name="past-donation" value="Yes" required> Yes</label>
              <label><input type="radio" name="past-donation" value="No" required> No</label>
          </div>
          <br>
          <div id="last-donation-container" class="hidden modal-content">
              <label for="last-donation">শেষ রক্তদানের সময়:</label>
              <input type="date" id="last-donation" name="last-donation">
              <br>
              <label for="donated">কতবার দিয়েছিলেন:</label>
              <input type="text" id="donated" name="donated">

            </div>
          <label>Profession:</label>
          <div class="profession-wrap">
              <label><input type="radio" name="profession" value="Student" required> Student</label>
              <label><input type="radio" name="profession" value="Worker" required> Job</label>
          </div>
          <br>
          <input type="text" id="institute" name="institute" placeholder="Institute(Working Place/University) (Optional)">

          <br>
          <button type="submit" id="submit-donor-form">Submit</button>
          <div class="loading-overlay">
              <div class="loader-1"></div>
          </div>
      </form>
  </div>
</div>

<!-- Modal Structure -->
